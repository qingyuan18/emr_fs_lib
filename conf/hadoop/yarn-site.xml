    </property>

  <property>
    <name>yarn.timeline-service.hostname</name>
    <value>10.0.0.83</value>
  </property>

  <property>
    <name>yarn.web-proxy.address</name>
    <value>10.0.0.83:20888</value>
  </property> 

  <property>
