    <value>10.0.0.83:8025</value>
  </property>

  <property>
    <name>yarn.resourcemanager.address</name>
    <value>10.0.0.83:8032</value>
  </property>

  <property>
    <name>yarn.resourcemanager.scheduler.address</name>
    <value>10.0.0.83:8030</value>
  </property>

  <property>
